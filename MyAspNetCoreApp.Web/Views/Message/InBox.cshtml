@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Bootstrap4.Core
@model IPagedList<EntityLayer.Concrete.Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white mr-2">
            <i class="mdi mdi-inbox"></i>
        </span> Gelen Kutusu
    </h3>

</div>









<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
       
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Gönderen </th>
                                <th> Konu </th>
                                <th> Gönderme Tarihi </th>
                                <th> Detaylar </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {


                                <tr>
                                    <td>
                                        <img src="~/writerimagefiles/@item.SenderUser.WriterImage" class="mr-2" alt="image"> @item.SenderUser.WriterName

                                    <td>
                                        <label>@item.Subject</label>
                                    </td>
                                    <td> @item.MessageDate.ToShortDateString() </td>

                                    <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-dark">Mesajı Oku</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@Html.PagedListPager((IPagedList)Model,page=>Url.Action("InBox", new {page}),Bootstrap4PagedListRenderOptions.ClassicPlusFirstAndLast)


 
