@model IEnumerable<EntityLayer.Concrete.Comment>




<div class="comment-top">
	<h4>Yorumlar</h4>
	@if (!Model.Any(comment => comment.CommentID != null))
	{
		<p style="margin-bottom:0px;">Burada hiç yorum bulunmuyor, eklemek ister misin?</p>
	}
	else
	{
		@foreach (var item in Model)
		{
			
				<div class="media" style="margin-bottom:20px;">
				<img src="~/webcore/images/t1.jpg " class="img-sm rounded-circle mr-3" alt="image">
					<div class="media-body">
						<h5 class="mt-0" style="margin-bottom:0px;">@item.CommentUserName</h5>

					<h6 style="color:limegreen">Konu: <span style="color:black">@item.CommentTitle</span></h6>
						<p style="margin-bottom:0px;">@item.CommentContent</p>
					<h7 style="color:limegreen">@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</h7>
					</div>
				</div>
			
		}
            }
			</div>









